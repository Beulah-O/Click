<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#ffffff"

    tools:context="com.kings_studios.beulah_oluwafemi.click.DefaultClick">

    <TextView
        android:id="@+id/tV"

        android:layout_width="362dp"
        android:layout_height="81dp"

        android:text="0"
        android:textSize="45sp"

        android:gravity="center"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.06"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/numbers"

        android:layout_width="122dp"
        android:layout_height="125dp"

        android:text="1"
        android:textSize="32sp"

        android:background="@drawable/roundedcornerbutton"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintVertical_bias="0.686" />

    <Button
        android:id="@+id/click"

        android:layout_width="122dp"
        android:layout_height="86dp"

        android:text="click"
        android:textSize="32sp"

        android:background="@drawable/roundedcornerbutton"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintVertical_bias="0.715" />

    <Space
        android:id="@+id/space"
        android:layout_width="272dp"
        android:layout_height="18dp"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/numbers"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/click"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintHorizontal_bias="0.259"
        app:layout_constraintVertical_bias="0.016" />

    <ProgressBar
        android:id="@+id/progressBar"

        style="?android:attr/progressBarStyleHorizontal"

        android:layout_height="0dp"
        android:layout_width="0dp"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:progress="100"

        app:layout_constraintBottom_toBottomOf="@+id/space"
        app:layout_constraintTop_toTopOf="@+id/space"
        app:layout_constraintLeft_toLeftOf="@+id/space"
        app:layout_constraintRight_toRightOf="@+id/space"

        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.0" />



</android.support.constraint.ConstraintLayout>
